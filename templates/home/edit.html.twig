{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #ee7752;
            --secondary-color: #e73c7e;
            --accent-color: #23a6d5;
            --font-primary: 'Roboto', sans-serif;
        }

        body, html {
            height: 100%;
            margin: 0;
            font-family: var(--font-primary);
            background: linear-gradient(-45deg, var(--primary-color), var(--secondary-color), var(--accent-color), #23d5ab);
            background-size: 400% 400%;
            animation: gradientBG 15s ease infinite;
            color: #333;
            font-size: 16px;
        }

        @keyframes gradientBG {
            0% { background-position: 0% 50%; }
            50% { background-position: 100% 50%; }
            100% { background-position: 0% 50%; }
        }

        .navbar {
            padding: 1rem 2rem;
            background-color: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-bottom: 3px solid var(--primary-color);
        }

        .container {
            max-width: 1280px;
            margin: 4rem auto;
            padding: 3rem;
            background: #fff;
            border-radius: 25px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
        }

        .card {
            background-color: #ffffff;
            border: 1px solid #eeeeee;
            border-radius: 20px;
            padding: 25px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            transition: all 0.3s ease-in-out;
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .btn-primary, .btn-edit {
            border-radius: 50px;
            font-size: 0.875rem;
            font-weight: bold;
            padding: 0.75rem 2rem;
            color: #fff;
            background-color: var(--primary-color);
            border: 2px solid transparent;
            transition: all 0.2s;
        }

        .btn-primary:hover, .btn-edit:hover {
            background-color: var(--accent-color);
            border-color: var(--primary-color);
        }

        @media (max-width: 768px) {
            .container {
                padding: 2rem;
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-sm border-0 rounded-lg">
                    <div class="card-header py-3 bg-gradient-primary">
                        <h1 class="card-title text-center mb-0 text-white">Edit Product</h1>
                    </div>
                    <div class="card-body bg-light">
                        {{ form_start(produitForm, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                        <div class="form-group mb-3">
                            {{ form_row(produitForm.Nom, {'attr': {'class': 'form-control', 'placeholder': 'Product Name'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(produitForm.Prix, {'attr': {'class': 'form-control', 'placeholder': 'Price'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(produitForm.Taille, {'attr': {'class': 'form-control', 'placeholder': 'Size'}}) }}
                        </div>
                        <div class="form-group mb-3">
                            {{ form_row(produitForm.categorie, {'attr': {'class': 'form-select', 'placeholder': 'Category'}}) }}
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary" type="submit">Save Changes</button>
                        </div>
                        {{ form_end(produitForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
