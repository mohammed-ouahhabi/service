{% extends 'base.html.twig' %}

{% block title %}Product Details{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: var(--font-primary);
            background-color: var(--background-color);
            color: var(--primary-color);
            padding: 20px;
        }

        .container {
            max-width: 960px;
            margin: auto;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensures the shadow and border-radius is contained */
        }

        .card {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
            align-items: center;
            padding: 40px; /* Adds more padding inside the card */
        }

        .card img {
            width: 100%;
            height: auto;
            border-radius: 8px;
        }

        .details {
            text-align: left;
        }

        .details h2 {
            color: var(--primary-color);
            font-size: 24px;
            margin-bottom: 0.5em;
        }

        .details h3 {
            color: var(--secondary-color);
            font-size: 18px;
            margin-bottom: 1em;
        }

        .details p {
            margin: 0.25em 0; /* Smaller margins for the paragraphs */
            font-size: 16px;
            line-height: 1.6; /* Improves readability */
        }

        .details span {
            font-weight: bold; /* Makes the labels bold */
        }

        footer {
            text-align: center;
            padding: 10px;
            background-color: var(--secondary-color);
            color: #ffffff;
        }

        .back-link {
            display: block;
            text-align: center;
            margin: 20px auto;
            width: max-content;
            padding: 10px 20px;
            color: var(--primary-color);
            background-color: transparent;
            border: 2px solid var(--primary-color);
            border-radius: 8px;
            transition: background-color 0.3s, color 0.3s;
            text-decoration: none;
        }

        .back-link:hover {
            background-color: var(--primary-color);
            color: #ffffff;
        }

        @media (max-width: 768px) {
            .card {
                grid-template-columns: 1fr;
                text-align: center;
            }

            .card img {
                margin-bottom: 20px; /* Adds margin when stacked on top of details */
            }
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <nav>
            <a href="{{ path('app_home') }}" class="back-link">Back to list</a>
        </nav>

        <main class="card">
            <img src="{{ asset('uploads/brochures/' ~ produits.brochureFilename) }}" alt="Image of {{ produits.Nom }}">
            <div class="details">
                <h2>{{ produits.Nom }}</h2>
                <h3>Overview</h3>
                <p><span>Price:</span> {{ produits.Prix | number_format(2, '.', ',') }} â‚¬</p>
                <p><span>Size:</span> {{ produits.Taille }}</p>
                <p><span>Category:</span> {{ produits.categorie ? produits.categorie.nom : 'No category assigned' }}</p>

                    <a href="{{ path('cart_add_cart', {'id': produits.id}) }}" class="btn btn-info">Ajouter au panier</a>

            </div>
        </main>

        <footer>
            <small>&copy; {{ "now"|date("Y") }} Your Company</small>
        </footer>
    </div>
{% endblock %}
